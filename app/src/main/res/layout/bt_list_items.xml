<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/bt_item_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Название"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_address"
/>

    <TextView
        android:id="@+id/bt_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Адрес"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/bt_name" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уровень сигнала:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_address" />

</androidx.constraintlayout.widget.ConstraintLayout>